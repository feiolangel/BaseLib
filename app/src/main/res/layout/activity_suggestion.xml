<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include layout="@layout/layout_title_base"/>

    <TextView
        android:tag="(30){23,21,0,0}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反馈内容"
        android:textSize="30px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="20px"
        android:textColor="#333333"/>

    <RelativeLayout
        android:tag="{24,20,24,0}"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/base_round_f4f4f4_5dip">

        <EditText
            android:id="@+id/et_suggestion"
            android:hint="乐意聆听您的任何意见或建议"
            android:padding="20px"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="26px"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_width="670px"
            android:background="#00000000"
            android:layout_height="175px" />
    </RelativeLayout>

    <TextView
        android:textSize="30px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"
        android:textColor="#333333"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="20px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/base_round_f4f4f4_5dip">

        <EditText
            android:id="@+id/et_phone"
            android:hint="输入您的手机号码（选填）"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_width="670px"
            android:textSize="26px"
            android:padding="20px"
            android:background="#00000000"
            android:layout_height="80px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sumbit"
        android:layout_width="match_parent"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="60px"
        android:layout_height="70px"
        android:textSize="30px"
        android:layout_marginBottom="150px"
        android:gravity="center"
        android:background="@drawable/base_round_title_color_45dp"
        android:text="提交建议"
        android:textColor="#ffffff" />
</LinearLayout>